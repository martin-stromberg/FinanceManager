@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Rendering
@using System.Collections.Generic

<div class="setup-panel" style="background:var(--fm-panel-color,#141a20);color:var(--text);padding:1rem;border-radius:.375rem;border:1px solid #2a323a;box-shadow:0 1px 0 rgba(0,0,0,0.03);margin-top:.5rem;">
    @if (InnerComponentType != null)
    {
        <DynamicComponent Type="InnerComponentType" Parameters="InnerParameters" />
    }
    else
    {
        @ChildContent
    }
</div>

@code {
    [Parameter] public Type? InnerComponentType { get; set; }
    [Parameter] public IDictionary<string, object>? InnerParameters { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
