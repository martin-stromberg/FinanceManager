@page "/contact-categories/new"
@page "/contact-categories/{Id:guid}"
@rendermode InteractiveServer
@inject NavigationManager Nav
@inject IServiceProvider Services
@using System.ComponentModel.DataAnnotations
@using FinanceManager.Web.Components.Shared
@using FinanceManager.Web.ViewModels
@using FinanceManager.Web.ViewModels.Common
@using Microsoft.Extensions.DependencyInjection
@using Microsoft.Extensions.Localization
ion
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Components.Pages.ContactCategoryEdit> Localizer
@using FinanceManager.Domain.Attachments
@using FinanceManager.Shared.Dtos
<PageTitle>@Localizer["PageTitle"]</PageTitle>

<Ribbon TTabEnum="ContactCategoryEdit.TabId" Provider="_vm" Localizer="Localizer" />

<h3>@((_vm?.IsEdit ?? false) ? Localizer["TitleEdit"] : Localizer["TitleNew"])</h3>

@if (_vm == null || !_vm.Loaded)
{
    <p>@Localizer["Loading"]</p>
}
else
{
    <EditForm Model="_vm!.Model" OnValidSubmit="SaveAsync">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div style="max-width:520px;">
            <label>@Localizer["Label_Name"]</label>
            <InputText @bind-Value="_vm!.Model.Name" />
            <ValidationMessage For="()=>_vm!.Model.Name" />
        </div>
        @if(!string.IsNullOrEmpty(_vm?.Error))
        {
            <div style="margin-top:.5rem;color:#e66;font-size:.8rem;">@_vm!.Error</div>
        }
    </EditForm>

    <div style="margin-top:1rem;">
        <SymbolPicker ParentKind="AttachmentEntityKind.ContactCategory" ParentId="@_vm!.Id" CurrentAttachmentId="_vm!.Model.SymbolAttachmentId" OnUploaded="OnSymbolUploaded" OnClear="OnSymbolCleared" />
    </div>
}

@code {
    [Parameter] public Guid? Id { get; set; }

    private ContactCategoryDetailViewModel? _vm;

    // Ribbon state - provided by ViewModel
    private enum TabId { Category }

    protected override async Task OnParametersSetAsync()
    {
        if (_vm is null)
        {
            _vm = ActivatorUtilities.CreateInstance<ContactCategoryDetailViewModel>(Services);
            _vm.StateChanged += (_, __) => { _ = InvokeAsync(StateHasChanged); };
            _vm.UiActionRequested += VmOnUiActionRequested;
        }
        await _vm.InitializeAsync(Id);
    }

    private void VmOnUiActionRequested(object? sender, string? action)
    {
        if (string.IsNullOrEmpty(action)) return;
        _ = InvokeAsync(() => HandleVmUiAction(action!));
    }

    private void HandleVmUiAction(string action)
    {
        switch (action)
        {
            case "Back":
                Back();
                break;
            case "Save":
                // Some VMs may request Save via UI event; call Save if needed
                _ = SaveAsync();
                break;
            case "Delete":
                _ = DeleteAsync();
                break;
            case "Saved":
                Nav.NavigateTo("/contact-categories", true);
                break;
            case "Deleted":
                Nav.NavigateTo("/contact-categories", true);
                break;
        }
    }

    private async Task SaveAsync()
    {
        if (_vm == null) return;
        var ok = await _vm.SaveAsync();
        if (ok)
        {
            Nav.NavigateTo("/contact-categories", true);
        }
    }

    private async Task DeleteAsync()
    {
        if (_vm == null) return;
        var ok = await _vm.DeleteAsync();
        if (ok)
        {
            Nav.NavigateTo("/contact-categories", true);
        }
    }

    private void Back() => Nav.NavigateTo("/contact-categories");

    private async Task OnSymbolUploaded(Guid aid) { if (_vm?.Id != null) { _vm.Model.SymbolAttachmentId = aid; StateHasChanged(); } }
    private async Task OnSymbolCleared() { if (_vm?.Id != null) { _vm.Model.SymbolAttachmentId = null; StateHasChanged(); } }

    public async ValueTask DisposeAsync()
    {
        try
        {
            if (_vm != null)
            {
                _vm.StateChanged -= (_, __) => { _ = InvokeAsync(StateHasChanged); };
                _vm.UiActionRequested -= VmOnUiActionRequested;
                await _vm.DisposeAsync();
            }
        }
        catch { }
    }
}
