    private async Task LoadAsync()
    {
        if (_vm?.IsBusy == true) { return; }
        if (_selectedKinds.Count == 0) { return; }
        StateHasChanged();
        try
        {
            // Sync component state into ViewModel
            _vm!.SelectedKinds = _selectedKinds.ToList();
            _vm.Interval = (int)_interval;
            _vm.IncludeCategory = _includeCategory;
            _vm.ComparePrevious = _comparePrevious;
            _vm.CompareYear = _compareYear;
            _vm.ShowChart = _showChart;
            _vm.Take = _take;
            _vm.IncludeDividendRelated = _includeDividendRelated; // new
            _vm.UseValutaDate = _useValutaDate; // new: propagate date kind to VM

            await _vm.ReloadAsync(_analysisMonth, default);
            
            // After loading points, load symbol mappings for entities shown in the report
            await LoadSymbolsForPointsAsync();
        }
        catch (Exception)
        {
            // error will be shown through VM operations when saving/updating favorites
        }
        finally
        {
            StateHasChanged();
        }
    }

    private static bool TryExtractGuidFromGroupKey(string groupKey, out Guid id)
    {
        id = Guid.Empty;
        if (string.IsNullOrWhiteSpace(groupKey)) return false;
        var parts = groupKey.Split(':');
        // try last segment
        if (parts.Length == 0) return false;
        var candidate = parts.Last();
        return Guid.TryParse(candidate, out id);
    }

    private async Task LoadSymbolsForPointsAsync()
    {
        _contactDisplaySymbolById.Clear(); _savingsDisplaySymbolById.Clear(); _securityDisplaySymbolById.Clear();
        _contactCategorySymbolById.Clear(); _savingsCategorySymbolById.Clear(); _securityCategorySymbolById.Clear();
        _contactCategorySymbolByName.Clear(); _savingsCategorySymbolByName.Clear(); _securityCategorySymbolByName.Clear();

        if (_vm == null || _vm.Points == null || _vm.Points.Count == 0) return;

        var contactIds = new HashSet<Guid>();
        var savingsIds = new HashSet<Guid>();
        var securityIds = new HashSet<Guid>();
        var categoryNames = new HashSet<string>();

        foreach (var p in _vm.Points)
        {
            if (p.GroupKey.StartsWith("Contact:") && TryExtractGuidFromGroupKey(p.GroupKey, out var cid)) contactIds.Add(cid);
            if (p.GroupKey.StartsWith("SavingsPlan:") && TryExtractGuidFromGroupKey(p.GroupKey, out var spid)) savingsIds.Add(spid);
            if (p.GroupKey.StartsWith("Security:") && TryExtractGuidFromGroupKey(p.GroupKey, out var sid)) securityIds.Add(sid);
            if (p.GroupKey.StartsWith("Category:") && !string.IsNullOrWhiteSpace(p.CategoryName)) categoryNames.Add(p.CategoryName!);
        }

        // Load contact categories (map id->symbol and name->symbol)
        try
        {
            var list = await Api.ContactCategories_ListAsync();
            foreach (var c in list)
            {
                _contactCategorySymbolById[c.Id] = c.SymbolAttachmentId;
                if (!string.IsNullOrWhiteSpace(c.Name)) _contactCategorySymbolByName[c.Name!] = c.SymbolAttachmentId;
            }
        }
        catch { }

        // Load savings plan categories
        try
        {
            var list = await Api.SavingsPlanCategories_ListAsync();
            foreach (var c in list)
            {
                _savingsCategorySymbolById[c.Id] = c.SymbolAttachmentId;
                if (!string.IsNullOrWhiteSpace(c.Name)) _savingsCategorySymbolByName[c.Name!] = c.SymbolAttachmentId;
            }
        }
        catch { }

        // Load security categories
        try
        {
            var list = await Api.SecurityCategories_ListAsync();
            foreach (var c in list)
            {
                _securityCategorySymbolById[c.Id] = c.SymbolAttachmentId;
                if (!string.IsNullOrWhiteSpace(c.Name)) _securityCategorySymbolByName[c.Name!] = c.SymbolAttachmentId;
            }
        }
        catch { }

        // Load entities in bulk where needed
        if (contactIds.Count > 0)
        {
            try
            {
                var list = await Api.Contacts_ListAsync(skip: 0, take: 2000, type: null, all: true, nameFilter: null);
                foreach (var c in list)
                {
                    if (contactIds.Contains(c.Id))
                    {
                        Guid? display = c.SymbolAttachmentId;
                        if (!display.HasValue && c.CategoryId.HasValue && _contactCategorySymbolById.TryGetValue(c.CategoryId.Value, out var catSym)) display = catSym;
                        _contactDisplaySymbolById[c.Id] = display;
                    }
                }
            }
            catch { }
        }

        if (savingsIds.Count > 0)
        {
            try
            {
                var list = await Api.SavingsPlans_ListAsync(onlyActive: false);
                foreach (var p in list)
                {
                    if (savingsIds.Contains(p.Id))
                    {
                        Guid? display = p.SymbolAttachmentId;
                        if (!display.HasValue && p.CategoryId.HasValue && _savingsCategorySymbolById.TryGetValue(p.CategoryId.Value, out var catSym)) display = catSym;
                        _savingsDisplaySymbolById[p.Id] = display;
                    }
                }
            }
            catch { }
        }

        if (securityIds.Count > 0)
        {
            try
            {
                var list = await Api.Securities_ListAsync(onlyActive: false);
                foreach (var s in list)
                {
                    if (securityIds.Contains(s.Id))
                    {
                        Guid? display = s.SymbolAttachmentId;
                        if (!display.HasValue && s.CategoryId.HasValue && _securityCategorySymbolById.TryGetValue(s.CategoryId.Value, out var catSym)) display = catSym;
                        _securityDisplaySymbolById[s.Id] = display;
                    }
                }
            }
            catch { }
        }
    }

    private Guid? GetSymbolForPoint(FinanceManager.Shared.Dtos.Reports.ReportAggregatePointDto p)
    {
        if (p == null) return null;
        try
        {
            if (p.GroupKey.StartsWith("Contact:") && TryExtractGuidFromGroupKey(p.GroupKey, out var cid)) return _contactDisplaySymbolById.TryGetValue(cid, out var v) ? v : null;
            if (p.GroupKey.StartsWith("SavingsPlan:") && TryExtractGuidFromGroupKey(p.GroupKey, out var spid)) return _savingsDisplaySymbolById.TryGetValue(spid, out var v2) ? v2 : null;
            if (p.GroupKey.StartsWith("Security:") && TryExtractGuidFromGroupKey(p.GroupKey, out var sid)) return _securityDisplaySymbolById.TryGetValue(sid, out var v3) ? v3 : null;
            // category rows: try lookup by category name
            if (p.GroupKey.StartsWith("Category:") && !string.IsNullOrWhiteSpace(p.CategoryName))
            {
                var name = p.CategoryName!;
                if (_contactCategorySymbolByName.TryGetValue(name, out var s)) return s;
                if (_savingsCategorySymbolByName.TryGetValue(name, out var s2)) return s2;
                if (_securityCategorySymbolByName.TryGetValue(name, out var s3)) return s3;
            }
        }
        catch { }
        return null;
    }

