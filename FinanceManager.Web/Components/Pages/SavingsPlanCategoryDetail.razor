@page "/savings-plan-categories/new"
@page "/savings-plan-categories/{Id:guid}"
@rendermode InteractiveServer
@using FinanceManager.Shared.Dtos
@using FinanceManager.Web.ViewModels.SavingsPlans
@using FinanceManager.Web.ViewModels.Common
@inject NavigationManager Navigation
@inject IServiceProvider Services
@using FinanceManager.Web.Components.Shared
@using FinanceManager.Web.ViewModels
@using Microsoft.Extensions.DependencyInjection
@inject Microsoft.Extensions.Localization.IStringLocalizer<FinanceManager.Web.Components.Pages.SavingsPlanCategoryDetail> Localizer
@using FinanceManager.Domain.Attachments
@using FinanceManager.Shared.Dtos
@inject FinanceManager.Shared.IApiClient Api
<PageTitle>@Localizer["PageTitle"]</PageTitle>

<Ribbon TTabEnum="SavingsPlanCategoryDetail.TabId" Provider="_vm" Localizer="Localizer" />

<h3>@((_vm?.IsEdit ?? false) ? Localizer["TitleEdit"] : Localizer["TitleNew"])</h3>

@if (!(_vm?.Loaded ?? false))
{
    <p>@Localizer["Loading"]</p>
}
else
{

    <EditForm Model="_vm!.Model" OnValidSubmit="SaveAsync">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div>
            <label>@Localizer["LabelName"]</label>
            <InputText @bind-Value="_vm!.Model.Name" />
            <ValidationMessage For="()=>_vm!.Model.Name" />
        </div>
        @if (!string.IsNullOrWhiteSpace(_vm?.Error))
        {
            <div class="error" style="margin-top:.5rem;">@_vm!.Error</div>
        }
    </EditForm>

    <div style="margin-top:1rem;">
        <label>@Localizer["LabelSymbol"]</label>
        <div style="margin-top:.4rem;">
            <SymbolPicker ParentKind="AttachmentEntityKind.SavingsPlanCategory" ParentId="@_vm!.Id" CurrentAttachmentId="_vm!.Model.SymbolAttachmentId" OnUploaded="OnSymbolUploaded" OnClear="OnSymbolCleared" />
        </div>
    </div>
}

@code {
    [Parameter] public Guid? Id { get; set; }
    private SavingsPlanCategoryDetailViewModel? _vm;

    // Ribbon state is provided by the ViewModel via Provider
    private enum TabId { SavingsPlanCategory }

    protected override async Task OnParametersSetAsync()
    {
        if (_vm is null)
        {
            _vm = ActivatorUtilities.CreateInstance<SavingsPlanCategoryDetailViewModel>(Services);
            _vm.StateChanged += (_, __) => { _ = InvokeAsync(StateHasChanged); };
        }
        await _vm.InitializeAsync(Id);
        StateHasChanged();
    }

    private async Task SaveAsync()
    {
        var ok = await _vm!.SaveAsync();
        if (ok)
        {
            Navigation.NavigateTo("/savings-plan-categories", true);
        }
    }

    private async Task DeleteAsync()
    {
        var ok = await _vm!.DeleteAsync();
        if (ok)
        {
            Navigation.NavigateTo("/savings-plan-categories", true);
        }
    }

    private void Back() => Navigation.NavigateTo("/savings-plan-categories");

    private void HandleRibbonAction(string action)
    {
        switch (action)
        {
            case "Back":
                Back();
                break;
            case "Save":
                _ = SaveAsync();
                break;
            case "Delete":
                _ = DeleteAsync();
                break;
        }
    }

    private async Task OnSymbolUploaded(Guid aid)
    {
        if (_vm?.Id != null)
        {
            var ok = await Api.SavingsPlanCategories_SetSymbolAsync(_vm.Id.Value, aid);
            if (ok)
            {
                _vm!.Model.SymbolAttachmentId = aid;
                StateHasChanged();
            }
        }
    }
    private async Task OnSymbolCleared()
    {
        if (_vm?.Id != null)
        {
            var ok = await Api.SavingsPlanCategories_ClearSymbolAsync(_vm.Id.Value);
            if (ok)
            {
                _vm!.Model.SymbolAttachmentId = null;
                StateHasChanged();
            }
        }
    }
}