@page "/savings-plan-categories"
@rendermode InteractiveServer
@using FinanceManager.Shared.Dtos
@using FinanceManager.Web.ViewModels.SavingsPlans
@using FinanceManager.Web.ViewModels.Common
@inject NavigationManager Navigation
@inject IServiceProvider Services
@using FinanceManager.Web.Components.Shared
@using FinanceManager.Web.ViewModels
@inject Microsoft.Extensions.Localization.IStringLocalizer<FinanceManager.Web.Components.Pages.SavingsPlanCategories> Localizer
<PageTitle>@Localizer["PageTitle"]</PageTitle>

<Ribbon TTabEnum="SavingsPlanCategories.TabId" Provider="_vm" Localizer="Localizer" />

<h3>@Localizer["Title"]</h3>
@if (!(_vm?.Loaded ?? false))
{
    <p>@Localizer["Loading"]</p>
}
else if (!_vm!.IsAuthenticated)
{
    <p>@Localizer["PleaseLogin"]</p>
}
else
{
    <table class="fm-table">
        <thead>
            <tr>
                <th></th>
                <th>@Localizer["Col_Name"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cat in _vm!.Categories)
            {
                <tr style="cursor:pointer;" @onclick="() => EditCategory(cat.Id)">
                    <td style="width:56px;">
                        @if (cat.SymbolAttachmentId != null)
                        {
                            <div style="width:40px;height:40px;border:1px solid var(--border);display:flex;align-items:center;justify-content:center;overflow:hidden;border-radius:6px;">
                                <img src="@($"/api/attachments/{cat.SymbolAttachmentId}/download")" alt="symbol" style="max-width:100%;max-height:100%;display:block;" />
                            </div>
                        }
                        else
                        {
                            <div style="width:40px;height:40px;border-radius:6px;border:1px dashed var(--border);display:flex;align-items:center;justify-content:center;color:var(--muted);">
                                <svg style="width:24px;height:24px;opacity:.6;"><use href="/icons/sprite.svg#image" /></svg>
                            </div>
                        }
                    </td>
                    <td>@cat.Name</td>
                </tr>
            }
            @if(_vm!.Categories.Count==0)
            {
                <tr><td colspan="2" style="opacity:.6;">@Localizer["Empty"]</td></tr>
            }
        </tbody>
    </table>
}

@code {
    // Ribbon state - required for TTabEnum resolution in generated razor class
    private enum TabId { SavingsPlanCategories }

    private SavingsPlanCategoriesViewModel? _vm;

    protected override async Task OnInitializedAsync()
    {
        _vm = ActivatorUtilities.CreateInstance<SavingsPlanCategoriesViewModel>(Services);
        _vm.StateChanged += VmOnStateChanged;
        _vm.UiActionRequested += VmOnUiActionRequested;
        await _vm.InitializeAsync();
    }

    private void HandleRibbonAction(string action)
    {
        switch (action)
        {
            case "New":
                Navigation.NavigateTo("/savings-plan-categories/new");
                break;
            case "Back":
                Navigation.NavigateTo("/savings-plans");
                break;
        }
    }
    
    private void EditCategory(Guid id) => Navigation.NavigateTo($"/savings-plan-categories/{id}");
    
    private void VmOnStateChanged(object? sender, EventArgs e)
    {
        _ = InvokeAsync(StateHasChanged);
    }

    private void VmOnUiActionRequested(object? sender, string? action)
    {
        if (string.IsNullOrEmpty(action)) return;
        _ = InvokeAsync(async () =>
        {
            switch (action)
            {
                case "Saved":
                case "Deleted":
                    await _vm!.InitializeAsync();
                    StateHasChanged();
                    return;
                case "New":
                    Navigation.NavigateTo("/savings-plan-categories/new");
                    return;
            }
        });
    }

    public async ValueTask DisposeAsync()
    {
        try
        {
            if (_vm != null)
            {
                _vm.StateChanged -= VmOnStateChanged;
                _vm.UiActionRequested -= VmOnUiActionRequested;
                await _vm.DisposeAsync();
            }
        }
        catch { }
    }
}