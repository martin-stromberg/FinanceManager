@page "/security-categories"
@rendermode InteractiveServer
@inject NavigationManager Nav
@inject IServiceProvider Services
@using FinanceManager.Web.Components.Shared
@using FinanceManager.Web.ViewModels
@using FinanceManager.Web.ViewModels.Securities
@using Microsoft.Extensions.DependencyInjection
@using Microsoft.Extensions.Localization
n
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Components.Pages.SecurityCategories> Localizer
<PageTitle>@Localizer["PageTitle"]</PageTitle>

<Ribbon TTabEnum="SecurityCategories.TabId" Provider="_vm" Localizer="Localizer" />

<h3>@Localizer["Title"]</h3>
@if (!(_vm?.Loaded ?? false))
{
    <p>@Localizer["Loading"]</p>
}
else if (!_vm!.IsAuthenticated)
{
    <p>@Localizer["PleaseLogin"]</p>
}
else
{
    <table class="fm-table wide">
        <thead>
            <tr>
                <th></th>
                <th>@Localizer["Th_Name"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var c in _vm!.Categories)
            {
                <tr style="cursor:pointer;" @onclick="(()=>OpenDetail(c.Id))">
                    <td style="width:56px;">
                        @if (c.SymbolAttachmentId != null)
                        {
                            <div style="width:40px;height:40px;border:1px solid var(--border);display:flex;align-items:center;justify-content:center;overflow:hidden;border-radius:6px;">
                                <img src="@($"/api/attachments/{c.SymbolAttachmentId}/download")" alt="symbol" style="max-width:100%;max-height:100%;display:block;" />
                            </div>
                        }
                        else
                        {
                            <div style="width:40px;height:40px;border-radius:6px;border:1px dashed var(--border);display:flex;align-items:center;justify-content:center;color:var(--muted);">
                                <svg style="width:24px;height:24px;opacity:.6;"><use href="/icons/sprite.svg#image" /></svg>
                            </div>
                        }
                    </td>
                    <td>@c.Name</td>
                </tr>
            }
            @if(!_vm!.Categories.Any())
            {
                <tr><td colspan="2" style="opacity:.6;">@Localizer["NoEntries"]</td></tr>
            }
        </tbody>
    </table>
}

@code {
    private enum TabId { Categories }
    private SecurityCategoriesViewModel? _vm;
 
     protected override async Task OnInitializedAsync()
     {
        _vm = ActivatorUtilities.CreateInstance<SecurityCategoriesViewModel>(Services);
        _vm.StateChanged += (_, __) => { _ = InvokeAsync(StateHasChanged); };
        await _vm.InitializeAsync();
     }

    private void OpenDetail(Guid id) => Nav.NavigateTo($"/security-categories/{id}");
}